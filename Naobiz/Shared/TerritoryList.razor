@using System.IO

@inject IWebHostEnvironment Environment

@if (IsNullable)
{
    <SelectItem TValue="string"></SelectItem>
}
@foreach (var territory in Territory.Load(Path.Combine(Environment.WebRootPath, FileName)))
{
    <SelectItem Value="territory.Code">@territory.Name</SelectItem>
}

@code {
    [Parameter]
    public string FileName { get; set; }

    [Parameter]
    public bool IsNullable { get; set; }
}
